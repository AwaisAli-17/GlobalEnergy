<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/blue" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Products"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="26dp"
        android:layout_marginTop="15dp"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/overlapping_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/prod0_layout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/image_0"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:src="@drawable/prod_4"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:backgroundTint="#97C676"
                        app:layout_constraintEnd_toEndOf="@id/image_0"
                        app:cardCornerRadius="100dp"
                        app:layout_constraintBottom_toBottomOf="@id/image_0">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:text=" Sale "
                            android:textSize="16dp"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/prod0_title"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/image_0"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textSize="18dp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:text="Caernarfon 18kW Eco Air Source Heat Pump"/>

                    <TextView
                        android:id="@+id/price0_title"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/image_0"
                        app:layout_constraintTop_toBottomOf="@id/prod0_title"
                        android:textSize="14dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#5A7547"
                        android:text="£ Contact us for best price"
                        android:layout_marginTop="40dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button0_prod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_centerHorizontal="true"
                        android:backgroundTint="#FF7549"
                        android:text="Get Quote"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/prod0_divider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/prod0_layout"
                    android:background="#2C4E4D4D"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/prod1_layout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/prod0_divider">

                    <ImageView
                        android:id="@+id/image_1"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:src="@drawable/prod_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/prod1_title"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/image_1"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textSize="18dp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:text="Caernarfon 18kW Eco Air Source Heat Pump"/>

                    <TextView
                        android:id="@+id/price_title"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/image_1"
                        app:layout_constraintTop_toBottomOf="@id/prod1_title"
                        android:textSize="14dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#5A7547"
                        android:text="£ Contact us for best price"
                        android:layout_marginTop="40dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button1_prod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_centerHorizontal="true"
                        android:backgroundTint="#FF7549"
                        android:text="Get Quote"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/prod1_divider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/prod1_layout"
                    android:background="#2C4E4D4D"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/prod2_layout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/prod1_divider"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/image_2"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:src="@drawable/prod_2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/prod2_title"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/image_2"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textSize="18dp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:text="Avon 200L Hot Water Heat Pump Cylinder"/>

                    <TextView
                        android:id="@+id/price2_title"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/image_2"
                        app:layout_constraintTop_toBottomOf="@id/prod2_title"
                        android:textSize="14dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#5A7547"
                        android:text="£ Contact us for best price"
                        android:layout_marginTop="40dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button2_prod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:backgroundTint="#FF7549"
                        android:text="Get Quote"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/prod2_divider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/prod2_layout"
                    android:background="#2C4E4D4D"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/prod3_layout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/prod2_divider"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/image_3"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:src="@drawable/prod_3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/prod3_title"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/image_3"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textSize="18dp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:text="Filternator Central Heating Filter"/>

                    <TextView
                        android:id="@+id/price3_title"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/image_3"
                        app:layout_constraintTop_toBottomOf="@id/prod3_title"
                        android:textSize="14dp"
                        android:layout_marginStart="5dp"
                        android:textColor="#5A7547"
                        android:text="£ Contact us for best price"
                        android:layout_marginTop="40dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button3_prod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:backgroundTint="#FF7549"
                        android:text="Get Quote"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/prod2_layout"
                    android:background="#2C4E4D4D"/>


            </RelativeLayout>

        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
